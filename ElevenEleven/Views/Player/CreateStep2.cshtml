@using ElevenEleven.Enums
@model Player

<h2>Step 2: Contact Information</h2>

<form asp-action="CreateStep2" method="post">
    @Html.AntiForgeryToken()

    <!-- Nationality -->
    <div class="form-group">
        <label asp-for="Nationality" class="control-label"></label>
        <select asp-for="Nationality" class="form-control" asp-items="Html.GetEnumSelectList<Country>()"></select>
        <span asp-validation-for="Nationality" class="text-danger"></span>
    </div>

    <!-- Phone Number -->
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <!-- Email Address -->
    <div class="form-group">
        <label asp-for="EmailAddress" class="control-label"></label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>

    <!-- Residential Address -->
    <div class="form-group">
        <label asp-for="ResidentialAddress" class="control-label"></label>
        <input asp-for="ResidentialAddress" class="form-control" />
        <span asp-validation-for="ResidentialAddress" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Next</button>
    <a asp-action="CreateStep1" class="btn btn-secondary">Back</a>
</form>
