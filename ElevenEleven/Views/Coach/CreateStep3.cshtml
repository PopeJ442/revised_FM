@using ElevenEleven.Enums
@model Player

<h2>Step 3: Physical Attributes</h2>

<form asp-action="CreateStep3" method="post">
    @Html.AntiForgeryToken()

    <!-- Height -->
    <div class="form-group">
        <label asp-for="Height" class="control-label"></label>
        <input asp-for="Height" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <!-- Weight -->
    <div class="form-group">
        <label asp-for="Weight" class="control-label"></label>
        <input asp-for="Weight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <!-- Preferred Foot -->
    <div class="form-group">
        <label asp-for="PreferredFoot" class="control-label"></label>
        <select asp-for="PreferredFoot" class="form-control" asp-items="Html.GetEnumSelectList<PreferredFoot>()"></select>
        <span asp-validation-for="PreferredFoot" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="CreateStep2" class="btn btn-secondary">Back</a>
</form>
