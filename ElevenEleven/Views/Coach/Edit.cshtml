@using ElevenEleven.Enums
@model Player

<h2>Edit Player</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="FirstName"></label>
        <input asp-for="FirstName" class="form-control" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <!-- Middle Name -->
    <div class="form-group">
        <label asp-for="MiddleName" class="control-label"></label>
        <input asp-for="MiddleName" class="form-control" />
        <span asp-validation-for="MiddleName" class="text-danger"></span>
    </div>

    <!-- Last Name -->
    <div class="form-group">
        <label asp-for="LastName" class="control-label"></label>
        <input asp-for="LastName" class="form-control" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <!-- Date of Birth -->
    <div class="form-group">
        <label asp-for="DateOfBirth" class="control-label"></label>
        <input asp-for="DateOfBirth" class="form-control" type="date" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <!-- Gender -->
    <div class="form-group">
        <label asp-for="Gender" class="control-label"></label>
        <select asp-for="Gender" class="form-control" asp-items="Html.GetEnumSelectList<Gender>()"></select>
        <span asp-validation-for="Gender" class="text-danger"></span>
    </div>

    <!-- Nationality -->
    <div class="form-group">
        <label asp-for="Nationality" class="control-label"></label>
        <select asp-for="Nationality" class="form-control" asp-items="ViewBag.Countries"></select>
        <span asp-validation-for="Nationality" class="text-danger"></span>
    </div>

    <!-- Phone Number -->
    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <!-- Email Address -->
    <div class="form-group">
        <label asp-for="EmailAddress" class="control-label"></label>
        <input asp-for="EmailAddress" class="form-control" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>

    <!-- Residential Address -->
    <div class="form-group">
        <label asp-for="ResidentialAddress" class="control-label"></label>
        <input asp-for="ResidentialAddress" class="form-control" />
        <span asp-validation-for="ResidentialAddress" class="text-danger"></span>
    </div>

    <!-- Height -->
    <div class="form-group">
        <label asp-for="Height" class="control-label"></label>
        <input asp-for="Height" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Height" class="text-danger"></span>
    </div>

    <!-- Weight -->
    <div class="form-group">
        <label asp-for="Weight" class="control-label"></label>
        <input asp-for="Weight" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Weight" class="text-danger"></span>
    </div>

    <!-- Preferred Foot -->
    <div class="form-group">
        <label asp-for="PreferredFoot" class="control-label"></label>
        <select asp-for="PreferredFoot" class="form-control" asp-items="Html.GetEnumSelectList<PreferredFoot>()"></select>
        <span asp-validation-for="PreferredFoot" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
